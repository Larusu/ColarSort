<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/dark"
    app:cardElevation="4dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Worker Form"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:fontFamily="@font/intro_rust" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"/>

        <!-- Worker name row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Worker Name:"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:fontFamily="@font/glacial_indifference"/>

            <EditText
                android:id="@+id/et_worker_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:background="@drawable/edittext_rounded"
                android:hint="Enter name"
                android:textColorHint="@color/lightGrey"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:fontFamily="@font/glacial_indifference"
                android:singleLine="true"/>

        </LinearLayout>

        <!-- Worker password row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Worker Password:"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:fontFamily="@font/glacial_indifference"/>

            <EditText
                android:id="@+id/et_worker_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:background="@drawable/edittext_rounded"
                android:hint="Enter password"
                android:textColorHint="@color/lightGrey"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:fontFamily="@font/glacial_indifference"
                android:singleLine="true"/>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_worker"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/glacial_indifference"
            android:text="Add"
            android:textColor="@color/black"
            android:textSize="20sp"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>
