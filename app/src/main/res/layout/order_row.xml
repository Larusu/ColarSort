<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp">

    <!-- Remove Row Button -->
    <ImageView
        android:id="@+id/btn_remove_row"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/button_circle"
        android:backgroundTint="@color/primaryColor"
        android:padding="6dp"
        android:src="@drawable/close_icon"
        app:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/order_row"
        app:layout_constraintBottom_toBottomOf="@id/order_row"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/order_row"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="23dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_remove_row"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ImageView
                android:id="@+id/order_product_image"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/default_img"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <View
                android:id="@+id/spacer_line"
                android:layout_width="1.5dp"
                android:layout_height="75dp"
                android:layout_marginStart="7dp"
                android:background="@color/black"
                app:layout_constraintStart_toEndOf="@id/order_product_image"
                app:layout_constraintTop_toTopOf="@id/order_product_image"
                app:layout_constraintBottom_toBottomOf="@id/order_product_image"/>

            <TextView
                android:id="@+id/order_product_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="Product 1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/glacial_indifference"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/spacer_line"
                app:layout_constraintEnd_toEndOf="parent"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="22dp"
                android:layout_marginStart="7dp"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/order_product_name"
                app:layout_constraintStart_toStartOf="@id/spacer_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:text="Quantity:"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/glacial_indifference"/>

                <ImageView
                    android:id="@+id/quantity_minus"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@drawable/minus_icon"/>

                <EditText
                    android:id="@+id/order_product_quantity"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.25"
                    android:layout_marginStart="4dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="1"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:background="@null"
                    android:scrollHorizontally="true"/>


                <ImageView
                    android:id="@+id/quantity_add"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/add_icon"
                    app:tint="@color/black" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
